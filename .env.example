# ============================================================================
# ZUGFAHRT PRO - ENVIRONMENT VARIABLES (PRODUCTION)
# ============================================================================
# 
# SECURITY WARNING: 
# - NEVER commit this file with real values to Git
# - Copy this file to .env and fill with actual values
# - Add .env to .gitignore
# - Rotate secrets regularly (monthly recommended)
#
# ============================================================================

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------
DB_URL=jdbc:postgresql://your-db-host:5432/zugfahrt_pro?sslmode=require
DB_USERNAME=zugfahrt_app_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ----------------------------------------------------------------------------
# JWT CONFIGURATION (CRITICAL)
# ----------------------------------------------------------------------------
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_256BIT_SECRET_HERE
JWT_EXPIRATION=3600000

# ----------------------------------------------------------------------------
# EMAIL CONFIGURATION (SMTP)
# ----------------------------------------------------------------------------
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=CHANGE_ME_GMAIL_APP_PASSWORD_HERE
MAIL_FROM=your-email@gmail.com
APP_NAME=Zugfahrt Pro

# ----------------------------------------------------------------------------
# OPENAI CONFIGURATION
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-proj-CHANGE_ME_YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-4o-mini

# ----------------------------------------------------------------------------
# CORS & FRONTEND CONFIGURATION
# ----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# ----------------------------------------------------------------------------
# SSL/TLS CONFIGURATION (HTTPS)
# ----------------------------------------------------------------------------
SSL_ENABLED=true
SSL_KEYSTORE=classpath:keystore.p12
SSL_KEYSTORE_PASSWORD=CHANGE_ME_KEYSTORE_PASSWORD_HERE
SSL_KEY_ALIAS=zugfahrt

# ----------------------------------------------------------------------------
# SECURITY SETTINGS
# ----------------------------------------------------------------------------
CSRF_ENABLED=true

# ----------------------------------------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------------------------------------
PORT=8080
LOG_FILE=logs/zugfahrt-app.log
